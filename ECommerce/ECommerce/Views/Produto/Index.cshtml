
@{
    /**/

    Layout = "~/Views/Shared/Layout.cshtml";
    List<ECommerce.Models.Produto> produtos = ViewBag.Produtos;
}
<div>
    <h1>Gerenciamento de Produtos</h1>

    @*<a href="~/Views/Produto/Cadastrar">Cadastrar Produto</a>*@  @*CTRL + C + K = Comentar linha*@

    @* Link em MVC | Razor *@
    @Html.ActionLink("Cadastrar", "Cadastrar", "Produto", new { @class = "btn btn-secondary" })


    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Preço</th>
                <th scope="col">Categoria</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var produto in produtos)
            {
                <tr class="table-active">
                    <td>@produto.Nome</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.Preco</td>
                    <td>@produto.Categoria</td>

                    <td>@Html.ActionLink("Remover", "Remover", "Produto", new { id = produto.ProdutoID }, new { @class = "btn btn-secondary" })</td>
                    <td>@Html.ActionLink("Alterar", "Alterar", "Produto", new { id = produto.ProdutoID }, new { @class = "btn btn-secondary" })</td>
                </tr>
            }


        </tbody>
    </table>
    <p>Dados atualizados às:<b> @DateTime.Now </b></p>

</div>